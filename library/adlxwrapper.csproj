<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Product>adlxwrapper</Product>
    <AssemblyName>adlxwrapper</AssemblyName>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <NoWarn>$(NoWarn);SYSLIB1054</NoWarn>
    <LangVersion>latest</LangVersion>
    <PackageId>adlxwrapper</PackageId>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageDescription>A POC of a wrapper for 'AMD Device Library eXtra', pure C# in a single source file.</PackageDescription>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.1" />
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>
</Project>